<!-- views/index.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant API</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Restaurant API</h1>
    <form action="/api/restaurants" method="POST">
        <label for="building">Building:</label>
        <input type="text" id="building" name="address.building" required>
        <label for="street">Street:</label>
        <input type="text" id="street" name="address.street" required>
        <label for="zipcode">Zip Code:</label>
        <input type="text" id="zipcode" name="address.zipcode" required>
        <label for="borough">Borough:</label>
        <input type="text" id="borough" name="borough" required>
        <label for="cuisine">Cuisine:</label>
        <input type="text" id="cuisine" name="cuisine" required>
        <button type="submit">Add Restaurant</button>
    </form>
    <hr>
    <form action="/api/restaurants" method="GET">
        <label for="page">Page:</label>
        <input type="number" id="page" name="page" required>
        <label for="perPage">Per Page:</label>
        <input type="number" id="perPage" name="perPage" required>
        <label for="boroughFilter">Borough:</label>
        <input type="text" id="boroughFilter" name="borough">
        <button type="submit">Search</button>
    </form>
    <hr>
    {{#each restaurants}}
    <div>
        <p><strong>Restaurant ID:</strong> {{_id}}</p>
        <p><strong>Borough:</strong> {{borough}}</p>
        <p><strong>Cuisine:</strong> {{cuisine}}</p>
    </div>
    {{/each}}
</body>
</html>
